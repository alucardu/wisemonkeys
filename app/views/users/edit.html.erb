<h1>Aanpassen</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @user do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :Ondernemer %>
      <%= f.check_box :b_account %>

      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
