!!!
%html
  %head
    %title Wisemonkeys
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    // %link{href: "http://fonts.googleapis.com/css?family=Muli:400,300italic", rel: "stylesheet", type: "text/css"}/
    = javascript_include_tag "masonry.pkgd.js", "data-turbolinks-track" => true
    = javascript_include_tag "imagesloaded.pkgd.js", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    #bg-overlay
    #header
      #logo
        %a{:href => "/"}
          = image_tag 'logo.png'
      #menu
        %a{:href => "/"}Menu +
        %ul
          %li 
            %a{:href => "/"}Join appSYNTH
          %li 
            %a{:href => "/"}Wedstrijd aanmaken
          %li 
            %a{:href => "/"}Sponsoren
          %li 
            = link_to 'Kunst bekijken', voteresults_path
          %li 
            %a{:href => "/"}Contact opnemen
          %li 
            %a{:href => "/"}Menu sluiten
      #register
        - if signed_in? 
          = link_to current_user.name, @user
        - else
          = link_to 'Registreren', new_user_path
      #twitter
        = image_tag 'icon-twitter.png'
      #facebook
        = image_tag 'icon-facebook.png'
      #login
        - if signed_in? 
          = link_to "Sign out", signout_path, method: "delete" 
        - else
          = link_to "Sign In", signin_path
    #container-content
      = yield