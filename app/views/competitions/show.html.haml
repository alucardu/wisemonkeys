%p#notice= notice

%p
  %b Title:
  = @competition.title
%p
  %b Description:
  = @competition.description
%p
  %b Prize:
  = @competition.prize
%p
  %b Deadline:
  = @competition.deadline
%p
  - @competition.pictures.each do |picture|
    = picture.title
    = image_tag(picture.image_url, :width => 200)

= link_to 'Klik om mee te doen!', new_picture_path(:competition_id => @competition)

= link_to 'Edit', edit_competition_path(@competition)
\|
= link_to 'Back', competitions_path
