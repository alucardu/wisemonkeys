%p#notice= notice

#match-info
  %div
    %h1
      = @competition.title
    %p
      %b Description:
      = @competition.description
    %p
      %b Prize:
      = @competition.prize
    %p
      %b Deadline:
      = @competition.deadline

  #btn-vote
    Breng je stem uit!

#container-art-bg
  #container-art
    %h1 Kies één
    - @competition.pictures.shuffle.each do |picture|
      .art
        = link_to picture.title, picture, :class => "art-name"
        = link_to upvote_picture_path(picture), :remote => true, "data-type" => :json do
          = image_tag(picture.image_url)
        -# = pluralize(picture.votes.count, "vote" )
        -# %span
          -# %div
            -# %p
              -# \ #{pluralize(picture.votes.count, "" )}
    #container-thanks
      %p Bedankt voor het stemmen, klik hier om te sluiten
  
#container.js-masonry
  - @competition.pictures.shuffle.each do |picture|
    .item
      = link_to picture do
        = image_tag(picture.image_url)
      = link_to picture.title, picture, :class => "art-name"
      Door:
      = picture.user.name
      -# = pluralize(picture.votes.count, "vote" )
      -# %span
        -# %div
          -# %p
            -# \ #{pluralize(picture.votes.count, "" )}

= link_to 'Klik om mee te doen!', new_picture_path(:competition_id => @competition)

= link_to 'Edit', edit_competition_path(@competition)
\|
= link_to 'Back', competitions_path
