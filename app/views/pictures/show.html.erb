<p id="notice"><%= notice %></p>

	<%= @picture.title  %>
	<%= @picture.description %>
	<%= @picture.user_name %>
	<%= image_tag(@picture.image_url, :width => 200) if @picture.image.present? %>
	<% if signed_in? %>
		<% if current_user == @picture.user || current_user.administrator? %>
			<%= link_to 'Bewerken', edit_picture_path(@picture) %> |
		      <%= link_to 'Verwijderen', @picture, confirm: 'Weet je het zeker?', method: :delete %> |
		      <%= link_to 'Terug', :back %>
		<% end %>
	<% end %>