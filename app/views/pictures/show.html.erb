<div id="content">
<p id="notice"><%= notice %></p>
	<div id="show">
		<% if signed_in? %>
	    	<h3><%= @picture.title  %></h3>
	      	<%= image_tag(@picture.image_url) if @picture.image.present? %>
	      	<p>
				<%= @picture.description %>
				</br>
				<%= @picture.user.name %>
				</br>
				<%= link_to 'Bewerken', edit_picture_path(@picture) %> |
				<%= link_to 'Verwijderen', @picture, confirm: 'Weet je het zeker?', method: :delete %>
			</p>
	      <% end %>
	    </div>
	    </div>
	</div>
</div>