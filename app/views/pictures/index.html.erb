<h1>Kunst Uploaden</h1>
<%= link_to 'Klik om kunst te uploaden', new_picture_path %></br>
<% @pictures.each do |picture| %>
	<tr>
		<td ><%= link_to picture.title, picture  %></td>
		<td ><%= picture.description  %></td>
		<td> <%= link_to image_tag(picture.image_url, :width => 200) , picture if picture.image.present?  %></td>
		<td> <%= pluralize(picture.votes.count, "vote" ) %>  </td>
		<td> <%= button_to '+1', upvote_picture_path(picture), method: :post %>  </td>
	</tr>
<%  end %>
